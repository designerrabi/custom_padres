        },
        {
          "type": "text",
          "id": "accordion_content",
          "label": "Accordion Content"
        }
      ]
    }
  ],
      "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom Sections"
    }
  ]
  }
{% endschema %}
