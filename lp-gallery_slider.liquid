<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

{% style %}

 .gallery_wrapper_area {
            position: relative;
            padding: 0px 0px 125px 0px;
        }
        .gallery-pagination {
            position: relative;
            z-index: 1;
        }
        .gallery-pagination .slick-dots .slick-dot {
            width: 10px;
            height: 12px;
            border-radius: 50%;
            background-color: #CDDBF6;
            margin: 0 5px;
            display: inline-block;
            border: none;
        }
        .gallery-pagination .slick-dots li.slick-active .slick-dot{
            background-color: #252E96;
        }
        .gallery-pagination .slick-dots {
            display: flex;
            justify-content: center;
        }
        .gallery_thumb_item img {
            border-radius: 10px;
        }
        .gallery_active .slick-slide {
            margin-right: 30px;
        }
        .gallery_active {
            margin-bottom: 30px;
        }
        .gallery_nav_prev.slick-arrow {
            background: none;
            border: none;
            position: absolute;
            top: 30%;
            color: #fff;
            left: 17.5%;
            font-size: 30px;
        }
        .gallery_nav_next.slick-arrow {
            background: none;
            border: none;
            position: absolute;
            top: 30%;
            color: #fff;
            right: 19%;
            font-size: 30px;
        }

          @media (min-width: 1700px) and (max-width: 1850px) {
            .gallery_nav_prev.slick-arrow {
                left: 14.5%;
            }
            .gallery_nav_next.slick-arrow {
                right: 15%;
            }
        
        }
        @media (min-width: 1311px) and (max-width: 1699px) {
            .gallery_nav_prev.slick-arrow {
                left: 7.5%;
            }
            .gallery_nav_next.slick-arrow {
                right: 10%;
            }
        }

        @media (max-width: 1310px) {
            .gallery_nav_prev.slick-arrow {
                left: 25px;
            }
            .gallery_nav_next.slick-arrow {

                right: 55px;
            }
        }

        @media (max-width: 767px) {
            .gallery_active .slick-slide {
                margin-right: 0px;
            }
            .gallery_nav_next.slick-arrow {
                right: 25px;
            }
            .gallery_thumb_item img {
                width: 100%;
            }
          .gallery_wrapper_area {
            	padding: 0px 0px 80px 0px;
            }

        }
  
{% endstyle %}



    <div class="gallery_wrapper_area">
            <div class="container">
                <div class="gallery_active">
                  {% for block in section.blocks %}
                  {% if block.type == 'gallery_slider' %}
                    <div>
                        <div class="gallery_thumb_item">
                            {% if block.settings.gallery_image %}
                                 <img src="{{ block.settings.gallery_image | image_url: width: 1500 }}" alt="Event Icon" class="">
                            {% endif %}
                        </div>
                    </div>
                    
                    {% endif %}
                    {% endfor %}

                </div>
                <button class="gallery_nav_prev">
                    <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 320 512" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M34.52 239.03L228.87 44.69c9.37-9.37 24.57-9.37 33.94 0l22.67 22.67c9.36 9.36 9.37 24.52.04 33.9L131.49 256l154.02 154.75c9.34 9.38 9.32 24.54-.04 33.9l-22.67 22.67c-9.37 9.37-24.57 9.37-33.94 0L34.52 272.97c-9.37-9.37-9.37-24.57 0-33.94z"></path></svg>
                </button>
                <button class="gallery_nav_next">
                    <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 320 512" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"></path></svg>
                </button>
                <div class="gallery-pagination"></div>
            </div>
      </div>


<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

  <script>
        $(document).ready(function(){
            $('.gallery_active').slick({
                slidesToShow: 3,
                slidesToScroll: 1,
                dots: true,
                arrows: true,
                autoplay: true,
                centerMode: false,
                centerPadding: '10px', 
                autoplaySpeed: 3000,
                infinite: true, 
                prevArrow: $('.gallery_nav_prev'),
                nextArrow: $('.gallery_nav_next'),
                appendDots: $('.gallery-pagination'),
                customPaging: function(slider, i) {
                    return '<button class="slick-dot"></button>';
                },
                responsive: [
                    {
                        breakpoint: 1200,
                        settings: {
                            slidesToShow: 3
                        }
                    },
                    {
                        breakpoint: 991,
                        settings: {
                            slidesToShow: 2
                        }
                    },
                    {
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 1
                        }
                    },
                    {
                        breakpoint: 767,
                        settings: {
                            slidesToShow: 1,
                        }
                    }
                ]
            });

       });

    </script>


